generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  GUEST
  MANAGER
  ADMIN
}

enum CartStatus {
  PENDING
  SUGGESTED
  APPROVED
  REJECTED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  DELIVERING
  DELIVERED
  CANCELLED
}

enum DeliveryType {
  DELIVERY
  PICKUP
}

enum ReservationStatus {
  UPCOMING
  ACTIVE
  COMPLETED
  CANCELLED
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String
  role         Role      @default(GUEST)
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  properties      Property[]
  reservations    Reservation[]
  propertyManager PropertyManager?
  reviews         ManagerReview[] @relation("ReviewerReviews")
}

model Property {
  id          String   @id @default(cuid())
  name        String
  address     String
  ownerId     String
  description String?
  autoApprove Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner             User               @relation(fields: [ownerId], references: [id])
  reservations      Reservation[]
  inventoryTemplate InventoryTemplate?
}

model PropertyManager {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  createdAt   DateTime @default(now())

  user           User            @relation(fields: [userId], references: [id])
  reviews        ManagerReview[]
  serviceRegions ServiceRegion[]
}

model ManagerReview {
  id         String   @id @default(cuid())
  managerId  String
  reviewerId String
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())

  manager  PropertyManager @relation(fields: [managerId], references: [id])
  reviewer User            @relation("ReviewerReviews", fields: [reviewerId], references: [id])
}

model ServiceRegion {
  id        String @id @default(cuid())
  managerId String
  region    String

  manager PropertyManager @relation(fields: [managerId], references: [id])
}

model Reservation {
  id         String            @id @default(cuid())
  propertyId String
  guestId    String
  checkIn    DateTime
  checkOut   DateTime
  status     ReservationStatus @default(UPCOMING)
  createdAt  DateTime          @default(now())

  property      Property        @relation(fields: [propertyId], references: [id])
  guest         User            @relation(fields: [guestId], references: [id])
  carts         Cart[]
  orders        Order[]
  agentAuditLog AgentAuditLog[]
}

model InventoryTemplate {
  id          String   @id @default(cuid())
  propertyId  String   @unique
  name        String
  description String?
  createdAt   DateTime @default(now())

  property Property               @relation(fields: [propertyId], references: [id])
  items    InventoryTemplateItem[]
}

model InventoryTemplateItem {
  id         String  @id @default(cuid())
  templateId String
  productId  String
  quantity   Int
  required   Boolean @default(true)

  template InventoryTemplate @relation(fields: [templateId], references: [id])
  product  Product           @relation(fields: [productId], references: [id])
}

model CatalogCategory {
  id          String    @id @default(cuid())
  name        String
  description String?
  products    Product[]
}

model Product {
  id          String  @id @default(cuid())
  name        String
  description String?
  categoryId  String
  price       Float
  unit        String
  imageUrl    String?
  inStock     Boolean @default(true)

  category               CatalogCategory         @relation(fields: [categoryId], references: [id])
  cartItems              CartItem[]
  inventoryTemplateItems InventoryTemplateItem[]
}

model Cart {
  id            String     @id @default(cuid())
  reservationId String
  status        CartStatus @default(PENDING)
  suggestedBy   String?
  totalAmount   Float      @default(0)
  autoApprove   Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  reservation Reservation @relation(fields: [reservationId], references: [id])
  items       CartItem[]
  orders      Order[]
}

model CartItem {
  id        String @id @default(cuid())
  cartId    String
  productId String
  quantity  Int
  price     Float

  cart    Cart    @relation(fields: [cartId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Order {
  id            String      @id @default(cuid())
  cartId        String
  reservationId String
  status        OrderStatus @default(PENDING)
  totalAmount   Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  cart           Cart            @relation(fields: [cartId], references: [id])
  reservation    Reservation     @relation(fields: [reservationId], references: [id])
  deliveryWindow DeliveryWindow?
}

model DeliveryWindow {
  id        String       @id @default(cuid())
  orderId   String       @unique
  startTime DateTime
  endTime   DateTime
  type      DeliveryType @default(DELIVERY)
  location  String?

  order Order @relation(fields: [orderId], references: [id])
}

model AgentAuditLog {
  id            String   @id @default(cuid())
  reservationId String
  action        String
  details       Json
  createdAt     DateTime @default(now())
  triggeredBy   String

  reservation Reservation @relation(fields: [reservationId], references: [id])
}
